{
	"name": "@botamic/first-timer",
	"version": "1.0.0",
	"description": "A GitHub App built with Probot that welcomes first-time contributors.",
	"keywords": [
		"github",
		"probot",
		"probot-app"
	],
	"homepage": "https://github.com//first-timer",
	"bugs": "https://github.com//first-timer/issues",
	"repository": "https://github.com//first-timer.git",
	"license": "MPL-2.0",
	"author": "Brian Faust <hello@basecode.sh>",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"dev": "nodemon --exec \"yarn start\"",
		"format": "yarn lint && yarn prettier",
		"lint": "tslint -c tslint.json -p tslint-project.json 'src/**/*.ts' --fix",
		"prepublishOnly": "yarn format && yarn test && yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"start": "probot run ./dist/index.js",
		"test": "jest",
		"test:watch": "jest --watchAll"
	},
	"jest": {
		"bail": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"@botamic/toolkit": "0.3.0",
		"@hapi/joi": "16.1.7",
		"probot": "9.8.0"
	},
	"devDependencies": {
		"@types/jest": "24.0.20",
		"@types/nock": "10.0.3",
		"@types/node": "12.12.22",
		"@types/prettier": "1.18.3",
		"@types/rimraf": "2.0.3",
		"@typeskrift/tsconfig": "0.1.2",
		"@typeskrift/tslint": "0.1.5",
		"codecov": "3.6.1",
		"jest": "24.9.0",
		"jest-extended": "0.11.2",
		"nock": "11.7.0",
		"nodemon": "1.19.4",
		"prettier": "1.18.2",
		"rimraf": "3.0.0",
		"smee-client": "1.1.0",
		"ts-jest": "24.1.0",
		"tslint": "5.20.0",
		"tslint-config-prettier": "1.18.0",
		"typescript": "3.7.4"
	},
	"engines": {
		"node": ">= 8.3.0"
	}
}
